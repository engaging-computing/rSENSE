$(document).ready ->
    $(".project_filters").submit ->
    
        x = $(@).children("input:checked").map ->
            return this.name
        
        filters = ""
        filters += x[j] + " " for i,j in x

        data={}
        data["project"] = {}
        data["project"]["filter"] = filters

        $.ajax
            url: $(@).attr('id')
            type: "PUT"
            dataType: "json"
            data:
                data
                
        false

    $(".projects_add_filter_checkbox").click ->
        $(@).parent().submit()