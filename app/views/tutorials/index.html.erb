<div class="row">
  <div class="col-lg-12">
    <div class="row padded-row">
      <%= form_tag tutorials_path, method: 'get', id: 'tutorials_search', class: 'navbar-search' do%>

        <!-- hidden input for pagination -->
        <input type="text" id="hidden_pagination" name="page" value="1" style="display: none;" />

        <div class="isotope-top">
          <div class="col-lg-12">
            <h1>Tutorials</h1>
          </div>
          <div class="col-lg-4">
            <select name="sort" class="tutorials_sort_select form-control">
              <option value="DESC">Newest First</option>
              <option value="ASC">Oldest First</option>
            </select>
          </div>
          <div class="col-lg-6">
            <%= text_field_tag :search, params[:search], class:'form-control'%>
          </div>
          <div class="col-lg-2">
            <%= submit_tag "Search", name: nil, class:'btn btn-default'%>
          </div>
          <div class="clear" style="padding-bottom:10px"></div>
        </div>
      <%end%>
    </div>
    <% if is_admin? %>
      <div class="row">
        <div class='col-lg-12 center'>
          <%= form_tag("/tutorials", method: "post") do%>
            <button id="addTutorialButton" class="btn btn-success" style="width:100%"><h4>Create Tutorial</h4></button>
          <%end%>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div id="tutorials" class="col-lg-12 isotope_container">
        <div class="isotope_pane">
        </div>
      </div>
    </div>
    <div class="row" style="padding-top: 10px;">
      <div class="col-lg-12">
        <div class="well text-center" id="load_tutorials">
          <h3 class="muted">Loading More <img src="/assets/spinner.gif" /></h3>
        </div>
      </div>
    </div>
  </div>
</div>