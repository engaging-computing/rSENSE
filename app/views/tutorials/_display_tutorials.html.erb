<div class="span3" id=<%=id%>> 
  <div style="text-align:center">
    <span class="tutorial">
        <%if @tutorials[id.to_i] != nil %>
          <a class="btn btn-primary btn-large" style="font-size:15pt !important; padding:30px; width:70%;" href="<%=tutorial_path(@tutorials[id.to_i])%>"><%=@tutorials[id.to_i].title%></a>
          <%if @tutorials[id.to_i].media_objects.first != nil && false %>
            <img src=<%=@tutorials[id.to_i].media_objects.first.src%> style="height:150px" />
          <%end%>
        <% end %>
      <%if @cur_user.try(:admin) %>
        <select class="set_tutorial" id=<%=id%> style="width:100%"> 
            <option value="" selected="selected">SELECT ONE</option>
          <% @all_tutorials.each do |t| %>
            <option value=<%=t.id%>><%=t.title%></option>
          <% end %>
        </select>
      <% end %>    
    </span>
  </div>
</div>
