<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span12">
    <h1 id="title_span"><%= tutorial_edit_helper 'title', (can_edit? @tutorial) %></h1>
  </div>
  
  <!-- Somwhat hacky name box popup on create -->
  <% if notice == "Tutorial was successfully created." %>
    <div id="name_box" class="modal hide fade well container" style="width:400px">
      <div> Please enter a name for this Tutorial. <br>
        <input id="name_name" class="name_field" type="text" style="width:75%" value="<%= @cur_user.name + "'s Tutorial" %>"></input>
        </div>
        <div class="clear"></div>
      <div style="float:right;">
          <button class="name_button btn btn-success">Finish</button>
      </div>
    </div>
  <% end %>
  
  <div class="span12">
    <%= tutorial_redactor_helper (can_edit? @tutorial) %>
  </div>
</div>

