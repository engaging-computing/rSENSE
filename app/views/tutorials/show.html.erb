<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span12">
    <h1 id="title_span"><%= tutorial_edit_helper 'title', (can_edit? @tutorial) %></h1>
  </div>
  
  <% if notice == "Tutorial was successfully created." %>
    <div id="name_box" class="modal hide fade well container" style="width:400px">
      <div> Please enter a name for this Project. <br>
        <input id="name_name" class="name_field" type="text" style="width:75%" value="<%= @cur_user.name + "'s Tutorial" %>"></input>
        </div>
        <div class="clear"></div>
      <div style="float:right;">
          <button class="name_button btn btn-success">Finish</button>
      </div>
    </div>
    <script type="text/javascript">
      $(document).ready( function(e)
      {
        console.log("test test");
        $('#name_box').modal();
        setTimeout(function()
        {
          $('#name_name').select()
        }, 300);
        
        $('#name_name').keyup(function(e) 
        {
          if (e.keyCode == 13)
          {
            $('.name_button').click();
          }
        });
        
        $('.name_button').click( function(e)
        {
          name = $('#name_name').val()
          data = {project:{title: name}};
          $.ajax({
            url: $('#title_span .info_save_link').attr('href'),
            type: 'PUT',
            dataType: 'json',
            data: data,
            success: function()
            {
              $('#title_span span.info_text a').text(name)
              $('#name_box').modal('hide');
            },
            error: function(e) {console.log(e);}
          });
        });
      });
    </script>
  <% end %>
  
  <div class="span12">
    <%= tutorial_redactor_helper (can_edit? @tutorial) %>
  </div>
</div>

