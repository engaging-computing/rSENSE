<div class="span4">
  
    <% if !@featured_3.empty? %>
      <div class="row">
          <h4 style="text-align:center">Featured Experiments</h4>
      </div>
    <% end %>

    <% @featured_3.all.each do |f|%>
        <div class="row">
            <div class="hero-unit">
                <h5><%=link_to f.title, experiment_path(f)%></h5>
                <% if f.media_objects.length > 0%>
                    <image src="<%=f.media_objects[0].src%>">
                <%else%>
                    Owner: <%=link_to f.owner.name, user_path(f)%> <br>
                    Sessions: <%=f.experiment_sessions.count%>
                <%end%>
            </div>
        </div>
    <% end %>
</div>