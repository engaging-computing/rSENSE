<div class="row">
  
  <div class="span12">
    <div class="experiment_info_box">
      <span style="font-size:2em"><%= experiment_edit_helper 'title', (@experiment.user_id == @cur_user.try(:id)) %></span><br>
      <span class="info_label" style="font-size:1.1em">Owner:</span> 
      <%= link_to @owner_name, user_path(@experiment.user_id) %><br>
      <span class="info_label" style="font-size:1.1em">Created:</span><%=time_ago_in_words(@experiment.created_at)%> ago
    </div>
  </div>

  <div class="span6">
    <div class="sidebar_box grey_content">
      <h4 class="center">Fields</h4>
      <table class="table fields_table" experiment="<%=@experiment.id%>">
        <th>Name</th>
        <th>Units</th>
        <th>Type</th>
        <% @experiment.fields.all.each do |f| %>
        <%= render 'field_edit', field: f, type: "field",row_id: f.id,can_edit: (@experiment.user_id == @cur_user.try(:id))%>
        <% end %> 
        <%if @experiment.user_id == @cur_user.try(:id)%>
        <tr><td colspan="3"><a class="field_add_link"><i class="icon-plus-sign"></i></a></td></tr>
        <%end%>
      </table>
    </div>
  </div>

  <div class="span6">
    <div class="sidebar_box grey_content">
      <h4 class="center">Sessions</h4>
      <table class="table">
        <% @experiment.experiment_sessions.all.each do |s| %>
        <tr>
          <td style="width:32px;height:32px;"><%= gravatar_image_tag(s.user.email, alt: s.user.firstname) %></td>
          <td><%= link_to "#{s.user.firstname} #{s.user.lastname[0]}", user_path(s.user) %></td>
          <td><%= link_to s.title, experiment_session_path(s) %></td>
          <% if (s.user.id == @cur_user.try(:id)) %>
          <td></td>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
