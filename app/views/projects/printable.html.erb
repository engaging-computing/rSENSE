<div class="row">
  <div class="col-md-12">
    <b style="font-size:1.5em"><%= @project.title %></b>
  </div>
  <div class="col-md-12">
    <p>Project #: <%= @project.id%></p>
  </div>
</div>  

<div class="row">
  <div class="col-md-12">
    <hr/>
  </div>
</div>  

<div class="row">
  <div class="col-md-12">
    <b style="font-size:1.3em">Description</b>
  </div>
  <div class="col-md-12 word-break">
      <%= raw @project.content %>
  </div>
</div>  

<div class="row">
  <div class="col-md-12">
    <hr/>
  </div>
</div>  

<div class="row">
  <div class="col-md-12">
    <b style="font-size:1.3em">Fields</b>
  </div>
  <div class="col-md-12">
    <table class="table table-bordered table-striped table-collapsed">
      <thead>
        <tr>
          <th style="max-width:30%">Name</th>
          <th style="max-width:30%">Units</th>
          <th style="max-width:30%">Type</th>
        </tr>
      </thead>
      <tbody>
        <% @project.fields.each do |f|%>
          <%= render 'field_edit', field: f, type: "field", row_id: f.id, can_edit: (can_edit? @project), has_ses: @project.data_sets.count %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>  
<div class="pagebreak"></div>

<div class="row">
  <div class="col-md-12">
    <b style="font-size:1.3em">Data Entry</b>
  </div>
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <% @project.fields.each do |field|%>
            <td><%=field.name%></td>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% (1..10).each do |i| %>
          <tr>
            <% @project.fields.each do |field|%>
              <td><input type="text" class="form-control"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

