<h2><%= @project.title %></h2>
<p>Project #: <%= @project.id%></p>

<hr/>

<div class="header">Description</div>
<%= raw @project.content %>

<hr/>

<div class="header">Fields</div>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th style="max-width:30%">Name</th>
      <th style="max-width:30%">Units</th>
      <th style="max-width:30%">Type</th>
    </tr>
  </thead>
  <tbody>
    <% @project.fields.each do |f|%>
      <%= render 'field_edit', field: f, type: "field", row_id: f.id, can_edit: (can_edit? @project), has_ses: @project.data_sets.count %>
    <% end %>
  </tbody>
</table>

<div class="pagebreak"></div>

<div class="input-line">Name/Group:__________________________________</div>

<div class="input-line">Date:________________________________________</div>

<table class="table table-striped table-bordered" id="entry">
  <thead>
    <tr>
      <% @project.fields.each do |field|%>
        <td class="center"><%=field.name%></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% (1..10).each do |i| %>
      <tr>
        <% @project.fields.each do |field|%>
          <td>  </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>




