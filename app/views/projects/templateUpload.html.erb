<%= form_tag "/projects/#{@project.id}/finishTemplateUpload", method: "post" do%>
  <div class="row">
    <div class="span12">
      <table class="fields_table">
        <thead>
          <tr>
            <th> File Header </th>
            <th> Field Type </th>
          </tr>
        </thead>
        <tbody>
          <% @headers.each do |header|%>
            <tr class="<%= cycle('feed-even','feed-odd')%>">
              <td><%= header %></td>
              <td>
                <select name="headers[<%=header%>]">
                  <%=options_for_select(@options,get_field_type('Number'))%>
                </select>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="span2">
      <b>Create Dataset?</b><input type="checkbox" name="create_dataset" checked><br/>
    </div>
    <div class="span2">
      <label for="title">Dataset Name</label>
      <input name="title" type="text" value="Dataset #1"><br/>
    </div>
  </div>
  
  <input type="hidden" name="file" value="<%=@tmp_file%>">
  <button type="submit" class="btn">Submit</button>
<% end %>