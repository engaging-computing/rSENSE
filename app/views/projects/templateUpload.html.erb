<%= form_tag "/projects/#{@project.id}/finishTemplateUpload", method: "post" do%>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-4">
      <h4>Please select types for each field below.</h4>
    </div>
    <div class="col-lg-4 col-lg-offset-4">
      <table id="fields_table" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th> File Header </th>
            <th> Field Type </th>
          </tr>
        </thead>
        <tbody>
          <% @headers.each do |header|%>
            <tr class="<%= cycle('row-even','row-odd')%>">
              <td><b><%= header %></b></td>
              <td>
                <select name="headers[<%=header%>]", class="form-control">
                  <%=options_for_select(@options,get_field_type('Number'))%>
                </select>
              </td>
            </tr>
          <% end %> 
        </tbody>
       
      </table>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-lg-3 col-lg-offset-4">
      <b>Also create dataset?</b><input type="checkbox" name="create_dataset" style="margin-bottom:4px" checked><br/>
    </div>  
  </div>
  <div class="row">
    <div class="col-lg-2 col-lg-offset-4">
      <input name="title" type="text" value="Dataset #1", class="form-control"><br/>
    </div>
    <div class="col-lg-2 col-lg-offset-1 ">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
  
  <div class="row">
  </div>
  <input type="hidden" name="file" value="<%=@tmp_file%>">
<% end %>