<% if can_edit?(@project) %>
  <%= form_tag "/projects/#{@project.id}/edit_fields", id: 'fields_table' do%>
    <div class="row">
      <div class="span8">
        <table class="fields_table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th>Units</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @project.fields.each do |field|%>
              <tr class="<%= cycle('feed-even','feed-odd')%> <%= (field.name == "Latitude" || field.name == "Longitude") ? "location" : ""%>">
                <td><input type="text" name="<%=field.id%>_name" value="<%= (defined?(@tmp_save) && @tmp_save.has_key?("#{field.id}_name")) ? @tmp_save["#{field.id}_name"] : field.name%>"></td>
                <td><%=get_field_name(field.field_type)%></td>
                <td>
                  <% if field.field_type == "Number"%>
                    <input name="<%=field.id%>_unit" value="<%=field.unit%>">
                  <% else %>
                    <%= field.unit%>
                  <% end %>
                </td>
                <td>
                  <button class="btn field_delete" href="/fields/<%=field.id%>" fid="<%=field.id%>" <%= @project.data_sets.count > 0 ? "disabled" : ""%>>
                    <i class="icon icon-remove"></i> Delete
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>  
      </div>
    </div>
    
    <div class="row">
      <hr class="span8">
    </div>
    
    <div class="row">
      <div class="span2">
          <select form="fields_table" name="new_field" id="new_field">
            <option value="">Add Field</option>
            <option value="Number">Number</option>
            <option value="Text">Text</option>
            <option value="Timestamp">Timestamp</option>
            <% if !(@project.fields.any? {|f| f.field_type == LONGITUDE_TYPE or f.field_type == LATITUDE_TYPE}) %>
              <option value="Location">Location</option>
            <% end %>  
          </select>
      </div>
      <div class="span2 offset4">
        <button type="submit" class="btn">Save and Return</button>
      </div>
    </div>
  <% end %>  
<% end %>  