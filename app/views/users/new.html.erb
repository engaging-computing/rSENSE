<div class="feed-top">
  <h1>Register for iSENSE</h1>
</div>

<div class="feed-even">
  <div class="field_top">
    <label for="firstname">First Name: *</label>
  </div>
  <div class="field_top">
    <input id="firstname"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint"> Can contain letters, single quotes, and hyphens. </div>
</div>
 
<div class="feed-odd">
  <div class="field_top">
    <label for="lastname">Last Name: *</label>
  </div>
  <div class="field_top">
    <input id="lastname"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint"> Can contain letters, single quotes, and hyphens. </div>
</div>

<div class="feed-even">
  <div class="field_top">
    <label for="username">Username: *</label>
  </div>
  <div class="field_top">
    <input id="username"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint"> Can contain letters and numbers. </div>
</div>

<div class="feed-odd">
  <div class="field_top">
    <label for="email">Email:</label>
  </div>
  <div class="field_top">
    <input id="email"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint"> e.g. user@example.com </div>
</div>

<div class="feed-even">
  <div class="field_top">
    <label for="password">Password: *</label>
  </div>
  <div class="field_top">
    <input id="password" type="password"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint"> Can contain any letters, number, and punctuation. </div>
</div>
  
<div class="feed-odd">
  <div class="field_top">
    <label for="password_confirmation">Password Confirmation: *</label>
  </div>
  <div class="field_top">
    <input id="password_confirmation" type="password"></input>
  </div>
  <div style="clear:both;"></div>
  
  <div class="hint">Retype your password.</div>
</div>

<div class="feed-bottom" style="padding-top:4px;"> 
  <div class="actions">
    <button id="register" class="btn btn-primary"> Create User </button>
  </div>
</div>
