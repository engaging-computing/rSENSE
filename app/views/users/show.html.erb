<p id="notice">
    <%= notice %>
</p>
<div class="row">
  <div class="span5">
  <div class="row">
    <div class="span5">
      <%if @user.email?%>
        <div style="float:left;">
            <%= gravatar_image_tag(@user.email, alt: @user.firstname) %>
        </div>
      <%end%>
      <span class="info_label">First Name:</span> 
      <%= user_edit_helper 'firstname', (@user.id == @cur_user.id) %>
      <br />
      <br />
      <%if @user.id == @cur_user.try(:id)%>
        <span class="info_label">Last Name:</span>
        <%= user_edit_helper 'lastname', (@user.id == @cur_user.id) %>
        <br />
        <br />
      <%end%>
      <span class="info_label">Username:</span>
      <%= user_edit_helper 'username' %>
      <br />
    </div>
  </div>

  <div class="row">
        <div class="span5">
          <div>
              <%= user_redactor_helper (@user.id == @cur_user.try(:id))%>
          </div>
      </div>
  </div>
 </div>
 
 <div class="span7">
  <%= form_tag users_path, method: 'get', id:'users_search', class:'navbar-search' do%>
    <div class="feed-top">
      <h2>My Stuff</h2>
      <select name="sort" class="experiments_sort_select">
        <option value="DESC">Newest First</option>
        <option value="ASC">Oldest First</option>
      </select>
      <div style="width:40%;float:left;margin-left:20px;">
        <%= text_field_tag :search, params[:search], class:'search-query'%>
      </div>
      <div style="width:20%;float:left;margin-left:40px;">
        <%= submit_tag "Search", name: nil, class:'btn'%>
      </div>
    </div>
  <%end%>
  <% @stuff.each do |thing| %>
    <div class="<%= cycle('feed-even', 'feed-odd')%>">
      <h5><%= thing.title%></h5>  
      <p><%= time_ago_in_words(thing.created_at)%></p>
    </div>
   <% end%> 
  <div class="feed-bottom"></div>
 </div>
</div> 


