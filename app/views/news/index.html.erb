<script>
  window.logged_in = <%= @cur_user != nil %>;
  window.is_admin = <%= is_admin? %>
</script>

<% if is_admin? %>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to "Add News Item", '/news/add', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<% @news.each do |n| %>
  <div class="row">
    <div class="col-md-12">
      <div class="item clickableItem" style="height:198px;">
        <a href="<%=news_path n%>"></a>
        <%if n.featured_media_id != nil %>
          <div style="float:left;clear:left;width:30%;height:198px;margin-right:15px;"><a href="<%=news_path n%>"><div class="featured_image_2" style=<%= "background-image:url(" + MediaObject.find(n.featured_media_id).src + ")"%>></div></a></div>
        <%end%>
        <div style="padding:7px;height:184px">
          <span class="item_title"><%= n.title %></span><br/>
          <span style="font-size:0.8em">Written on <%=n.created_at.strftime("%B %d, %Y")%></span><br/><br/>
          <%= n.summary %><br/><br/>
          <%= link_to "Read More", news_path(n) %>
        </div>
      </div>      
    </div>  
  </div>
<% end %>  