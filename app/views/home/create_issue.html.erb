<%= form_tag('/submit_issue', method: 'post') do %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-9 h1">Report a Bug</div>
      </div>
    </div>
    <!-- Both forms should be fragments. You can render fragments with 'render fragmentname' -->
    <div id="bug_form" class="panel-body">
      <div class="form-group" style="display:none">
          <%= label_tag(:user_id, "User ID:") %>
          <%= text_field_tag(:user_id, @cur_user.id) %>
      </div>
      <div class="form-group">
          <%= label_tag(:description, "Describe the problem:") %>
          <%= text_area_tag(:description, nil, placeholder: 'e.g. When I click the submit button on the login page, nothing happens.', class: "form-control", rows: 4, required: "true") %>
      </div>
      <div class="form-group">
          <%= label_tag(:instructions, "What were you doing when you encountered this problem?") %>
          <%= text_area_tag(:instructions, nil,
          placeholder: 'e.g. Go the the login page. Click the submit button.', rows: 4, class: "form-control", required: "true") %>
      </div>      
	  <% user_agent = UserAgent.parse(request.env['HTTP_USER_AGENT']) %>
      <div class="row" style="display:none">
        <div class="form-group col-md-4">
          <%= label_tag(:browser, "Your Browser:") %>
          <%= text_field_tag(:browser, user_agent.browser + " " + user_agent.version, class: "form-control") %>
        </div>
        <div class="form-group col-md-4">
          <%= label_tag(:os, "Your Operating System:") %>
          <%= text_field_tag(:os, user_agent.platform, class: "form-control") %>
        </div>
        <div class="form-group col-md-4">
          <%= label_tag(:isense_version, "iSENSE Version:") %>
          <%= text_field_tag(:isense_version, @version, class: "form-control") %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag(:logged_in, "Were you logged into iSENSE when you discovered this problem?") %>
        <%= select_tag(:logged_in, options_for_select([['Yes', 1],['No', 0]], 1), class: "form-control", style: "width:100px;") %>
      </div>
      <div class="form-group">
        <%= label_tag(:is_admin, "Were you logged into an iSENSE admin account when you discovered this problem?") %>
        <%= select_tag(:is_admin, options_for_select([['Yes', 1],['No', 0]], 0), class: "form-control", style: "width:100px;") %>
      </div>
      <!-- TODO UI for labels e.g. only UI or Vis -->
      <!-- TODO add ability to set a milestone -->
      <!-- TODO enabled image uploading -->
    </div>
    <div class="panel-footer">
      <%= submit_tag("Submit", class: "btn btn-primary") %>
    </div>
  </div>
  <%= hidden_field_tag(:access_token, params[:access_token]) %>
<% end %>