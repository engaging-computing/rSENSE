<% if @featured_vis != nil%>
  <div class="row visible-desktop">
    <div class="span4">
      <h2><%= link_to @featured_vis.title, visualization_path(@featured_vis)%></h2>
      <b>Created: </b><%= time_ago_in_words(@featured_vis.created_at)%> ago, on <%=@featured_vis.created_at.strftime("%B %d, %Y")%><br />
      <b>From Project: </b><%= link_to @featured_vis.project.title, project_path(@featured_vis.project)%><br />
      <b>By: </b><%= link_to @featured_vis.owner.name, user_path(@featured_vis.owner)%>
      <%= render 'shared/content', {type: 'visualization', field: "content", content: @featured_vis.content, row_id: @featured_vis.id, has_content: !@featured_vis.content.blank?, can_edit: false} %>
      <br />
      <a href="visualizations" class="btn btn-primary">See More Visualizations</a>
    </div>
    <div class="span8"><iframe scrolling="no" style="width:100%;height:400px;border:0px;" src="/visualizations/<%=@featured_vis.id%>?notabs=true"></iframe></div>
</div>
<%end%>
<br />
<div class="row">
  <div class="span12">
    <h3>Featured Projects</h3>
  </div>
</div>
<div class="row">
  <% (0..5).each do |i|%>
    <div class="span2">
      <%if @featured_projects[i] != nil%>
        <div class='item word-break'>
          <%if @featured_projects[i].featured_media_id != nil%><a href="/projects/#{@featured_projects[i].id}"><img src=<%=MediaObject.find(@featured_projects[i].featured_media_id).src%>></img></a><%end%>
          <h4 style='margin-top:0px;'><%= link_to @featured_projects[i].title, project_path(@featured_projects[i]) %></h4>
          <b>Created: </b><%= time_ago_in_words(@featured_projects[i].created_at)%> ago, on <%=@featured_projects[i].created_at.strftime("%B %d, %Y")%>
        </div>
      <%end%>
    </div>
  <%end%>
</div>
<br />
<a href="projects" class="btn btn-primary">See More Projects</a>