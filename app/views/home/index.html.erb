<div class="visible-desktop visible-tablet">
<% if @featured_vis != nil%>
  <div class="row visible-desktop">
    <div class="span4">
      <h2><%= link_to @featured_vis.title, visualization_path(@featured_vis)%></h2>
      <b>Created: </b><%= time_ago_in_words(@featured_vis.created_at)%> ago, on <%=@featured_vis.created_at.strftime("%B %d, %Y")%><br />
      <b>From Project: </b><%= link_to @featured_vis.project.title, project_path(@featured_vis.project)%><br />
      <b>By: </b><%= link_to @featured_vis.owner.name, user_path(@featured_vis.owner)%>
      <%= render 'shared/content', {type: 'visualization', field: "content", content: @featured_vis.content, row_id: @featured_vis.id, has_content: !@featured_vis.content.blank?, can_edit: false} %>
      <br />
      <a href="visualizations" class="btn btn-primary">See More Visualizations</a>
    </div>
    <div class="span8"><iframe scrolling="no" style="width:100%;height:400px;border:0px;" src="/visualizations/<%=@featured_vis.id%>?presentation=true"></iframe></div>
</div>
<%end%>
<div class="row">
  <div class="span12">
    <h3>Featured Projects</h3>
  </div>
</div>
<div id="carousel-area" style="width:100%; text-align:center">
<a href="#carousel-area" class="prev carousel-arrow" style="margin-right:10px"> < </a>
<div class="projectsCarousel">
  <ul>
    <% @featured_projects.each do |i|%>
      <li class="carousel-cell">
        <div style="width:240px;">
          <%if i != nil%>
            <div class='item center' style="height:210px; position:relative">
              <h4 class="twolines" style='margin-top:5px;'><%= link_to i.title, project_path(i) %></h4>
              <%if i.featured_media_id != nil%>
                <div style="width:208px; text-align:center; height:110px; line-height:110px; position:absolute; top:64px; left:10px">
                  <%= link_to image_tag(MediaObject.find(i.featured_media_id).src, :style=>'max-height:110px;'), project_path(i) %>
                </div>
              <%end%>
              <div style="text-align:left; position:absolute; bottom:10px">
                <span style="font-weight:bold">Owner:</span> <%= link_to i.owner.name, user_path(i.owner) %><br/>
                <span style="font-weight:bold">Created:</span> <%= i.to_hash(false)[:timeAgoInWords] %> ago
              </div>
            </div>
          <%end%>
        </div>
      </li>
    <%end%>
  </ul>
</div>
<a href="#carousel-area" class="next carousel-arrow"> > </a>
</div>
<a href="projects" class="btn btn-primary">See More Projects</a>
</div>
<div class="visible-phone">
  <%if @featured_projects.first != nil%>
    <% i = @featured_projects.first %>
    <div>
        <%if i.featured_media_id != nil%>
          <%= link_to image_tag(MediaObject.find(i.featured_media_id).src, :style=>'max-height:110px; float:right'), project_path(i) %>
        <% end %>
        <h4><%= link_to i.title, project_path(i) %></h4>
        <span style="font-weight:bold">Owner:</span> <%= link_to i.owner.name, user_path(i.owner) %><br/>
        <span style="font-weight:bold">Created:</span> <%= i.to_hash(false)[:timeAgoInWords] %> ago
        <div><%= i.content %></div>
        <br><a href="projects" class="btn btn-primary">See More Projects</a>
    </div>
    <% end %>
</div>