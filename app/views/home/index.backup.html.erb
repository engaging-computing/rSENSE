    <div class=" first-column col-lg-6" id="column-one">
      <div class="hidden-lg">
        <!--<hr class="featurette-divider hidden-xs" />-->
        <h2 class="homepage-header">Download iSENSE Mobile Apps</h2> <br/>
          <div class="col-md-8 col-sm-6 col-xs-12 app-desc">
