<% if @cur_user.admin%>  
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Editing: <%= @visualization.title%></h1>
    </div>
    <div class="panel-body">
      <%= render 'form' %>
    </div>
  </div>

  <div class="panel panel-default panel-danger">
    <div class="panel-heading">
      <h1>Danger Zone</h1>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <div class="checkbox-inner">
          <% if can_delete? @visualization %>
            <%= link_to raw('<div class="btn btn-danger"><i class="fa fa-times-circle"></i>  Delete Visualization </div>'), @visualization, method: :delete, data: { confirm: "Are you sure you want to delete this visualization?" } %>
          <% else %>
            <div class="btn btn-danger disabled">
              <i class="fa fa-times-circle"></i>  Delete Visualization
            </div>
          <% end %>
        </div>
        <span class="help-block">If you delete a visualization it will be gone forever.</span>
      </div>
    </div>
  </div>
<%else%>
  You are not authorized to view this page.
<%end%> 
