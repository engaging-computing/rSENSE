<div class='item clickable_item <%= (defined? @box_project_font_page) ? "front_page_item" : "" %>'>
        
  <a href='<%=project_path @box_project%>'>
    <%= image_tag "blank.png", {class: "area_link", alt: ""} %>
  </a>
  
  <% if @box_project.featured_media_id != nil %>
    <div class="item_image" style='background-image:url(<%=@box_project.media_objects.find(@box_project.featured_media_id).src%>)'></div>
  <% end %>
  
  <div class="item_desc">
    
    <div class="item_title word_wrap">
      <%=link_to @box_project.name, @box_project%>
      <% if @box_project.featured and !(defined? @box_project_font_page) %> 
        <span> (featured) </span>
      <% end %>
    </div>
    
    by <%=@box_project.owner.name%> <br/>
    on <%=@box_project.created_at.strftime("%B %d, %Y")%> <br/>
    <div class="item_badges">
      <div>
        <span class='badge'><i class="fa fa-flask">&nbsp;</i><%=@box_project.data_sets.count%> <br/><p>Data </p></span>
      </div>
      <div>
        <span class='badge'><i class="fa fa-eye">&nbsp;</i><%=@box_project.views%> <br/><p>Views</p></span>
      </div>
      <div>
        <span class='badge'><i class="fa fa-thumbs-up">&nbsp;</i><%=@box_project.like_count%><br/><p>Likes </p></span>
      </div>
    </div>
    
  </div>
</div>