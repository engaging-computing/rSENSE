<span class="edit_info" field='<%=field%>' type='<%=type%>' value='<%=value%>' make_link='<%=make_link%>'>

  <div class="info_text">
    <div class='info_val' style="display:inline">
      <% if make_link %>
        <%= link_to value, "/#{type.pluralize}/#{row_id}" %>
      <% else %>
        <%= value %>
      <% end %> 
    </div>
  
    <%if can_edit %>
        <span class="info_edit_link" href=<%="/#{type.pluralize}/#{row_id}"%>><i style="font-size:0.8em" class="fa fa-edit"  title="Click to edit <%=field%>" ></i></span>
    <%end%>
  </div>

</span>