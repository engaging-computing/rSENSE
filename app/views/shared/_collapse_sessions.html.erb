<div class="span4">
    <div class="sidebar_box grey_content">
        <div class="accordion" id="accordion2">
            <div class="accordion-group">
                <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                    <h4 class="center">Sessions <i class="icon-chevron-down"></i></h4>
                </a>
                </div>
                <div id="collapseTwo" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <table class="table">
                            <% @experiment.experiment_sessions.all.each do |s| %>
                                <tr>
                                    <td style="width:32px;height:32px;"><%= gravatar_image_tag(s.user.email, alt: s.user.firstname) %></td>
                                    <td><%= link_to "#{s.user.firstname} #{s.user.lastname[0]}", user_path(s.user) %></td>
                                    <td><%= link_to s.title, experiment_session_path(s) %></td>
                                    <% if (s.user.id == @cur_user.try(:id)) %>
                                        <td></td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>