<div id="media_object_list" type="<%=type%>" obj_id="<%=object.id%>">
  <table id="media_table">
    <thead>
      <tr>
        <th style="width:10%">File</th>
        <th>Name</th>
        <th style="width:20%"></th>
        <th style="width:10%">Display</th>
      </tr>
    </thead>
    <tbody>
      <% object.media_objects.all.each do |mo| %>
        <tr class="<%= cycle('feed-even','feed-odd') %> media">
          <td class="media_icon"><div><%=media_object_thumbnail_helper(mo)%></div></td>
          <td><div class="truncate"><%= link_to mo.name, mo.src%></div></td>
          <td>
            <div class="controls">
              <% if can_edit? mo %>
                <a href="<%= media_object_path mo %>">Edit</a>
              <% end %>
              <% if can_delete? mo %>
                | <a class="media_object_delete" href="<%= media_object_url mo %>" name="<%= mo.title %>">Delete</a>
              <% end %>
            </div>
          </td>
          <td>
            <div class="center">
              <% if ((mo.media_type == "image") && (can_edit? object))%>
                <input type="checkbox" class="img_selector" name="img_selector" obj_id="<%=object.id%>" <%if object.featured_media_id == mo.id%>checked<%end%> mo_id="<%=mo.id%>"></input>
              <%end%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="redactor_file_upload_hidden" style="width:0px;height:0px"></div>
  <br />
  <% if can_edit? object %>
    <div class="center"><button class="btn btn-success" id="redactor_file_upload_btn">Upload Media</button></div>
  <% end %>
</div>
