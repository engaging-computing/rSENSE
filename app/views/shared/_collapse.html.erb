<div class="span<%=width%>" id="<%=unique_id%>" <%if should_hide == true %> style="display:none"<%end%> >
    <div class="sidebar_box grey_content">
        <div class="accordion" id="accordion<%=title%>">
            <div class="accordion-group">
                <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion<%=title%>" href='#collapse<%=title%>'>
                    <h4 class="center"><%=title%> <i class="icon-chevron-down"></i></h4>
                </a>
                </div>
                <div id="collapse<%=title%>" class="accordion-body collapse in" style="overflow:visible;">
                    <div class="accordion-inner">
                        <%= yield %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>