<script type="text/javascript">
  window.fields = JSON.parse('<%= raw @project.fields.to_json%>');
  window.postURL = '<%= url_for :controller => :data_sets, :action => :manualUpload, :eid => @project.id %>';
</script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

<div class="row">
	<div style="margin-bottom:20px" class="span12">
    <table id="manualTable">
      <thead>
        <tr>
        <% for field in @project.fields %>
          <th data-field-type="<%= get_field_name(field.field_type) %>"><%= field.name %></th>
        <% end %>
        </tr>
      </thead>

      <tbody>
        <tr>
        <% for i in 0...@project.fields.length %>
          <td></td>
        <% end %>
        </tr>
      </tbody>
    </table>    </div>
</div>

<!-- This is the map picker -->
<%if @has_location%>
  <div id="map_picker" class="modal hide fade well container" style="width:400px">
    <div id="map_canvas" style="width:400px; height:300px"></div><br/>
    <label>Address: </label><input id="address"  type="text"/>
    <button class="btn btn-primary pull-right" id="apply_location">Apply</button>
  </div>
  <button class="btn" id="test">Mappy</button>
<%end%>

