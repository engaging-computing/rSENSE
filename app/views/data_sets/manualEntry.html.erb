<script type="text/javascript">
  window.fields = JSON.parse('<%= raw(escape_javascript(@project.fields.to_json)) %>');
  window.postURL = 'manualUpload';
</script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

<div class="full_width_edit" style="font-size:2em;">
  <%= project_edit_helper 'title', false, true %>
</div>

<div class="row" style="padding-bottom: 2em">
  <div class="col-lg-6">
    <strong><label for="data_set_name">Dataset Name:</label></strong>
      <input id="data_set_name" name="data_set_name" class="form-control" 
        type="text" placeholder="Boston, MA Snowfall Total">
  </div>
  <div class="col-lg-6" <% unless @cur_user.nil? %>style="display: none"<% end %>>
    <strong><label for="contrib_name">Your Name:</label></strong>
    <input id="contrib_name" name="contrib_name" class="form-control" type="text">
  </div>
</div>

<div class="row">
  <div style="margin-bottom:20px" class="col-lg-12">
    <div style="overflow-x: auto;">
      <table id="manualTable" data-project-id="<%= @project.id %>" class="table table-bordered table-striped">
        <thead>
          <tr>
          <% for field in @project.fields %>
            <th data-field-type="<%= get_field_name(field.field_type) %>" data-field-id="<%= field.id %>" data-field-restrictions="<%= field.restrictions %>" data-field-name="<%= field.name %>" ><%= field.name %>
            <% if field.unit != "" and !field.unit.nil? %>
              (<%=field.unit%>)
            <% end %></th>
          <% end %>
          </tr>
        </thead>
  
        <tbody>
        </tbody>
      </table>
      <i>*Timestamps must be in the form "yyyy/MM/dd hh:mm:ss" or a unix timestamp</i>
    </div>
    <div class="edit_table_control pull-right">
    </div>
  </div>
</div>
